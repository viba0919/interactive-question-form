{
  "root": true,
  "extends": "eslint:recommended",
  "rules": {
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "eqeqeq": 2,
    "no-alert": 2,
    "no-shadow-restricted-names": 2,
    "no-warning-comments": [2, {"terms": ["fixme", "todo"]}],
    "guard-for-in": 2,
    "new-parens": 2,
    "default-case": 2,
    "no-with": 2,
    "no-array-constructor": 2,
    "no-new-object": 2,
    "no-bitwise": 2,
    "no-eval": 2,
    "no-inline-comments": 1,
    "no-new": 2,
    "max-depth": [2, 3],
    "semi": [1, "always"],
    "id-match": [1,  "^[$a-zA-Z][a-zA-Z0-9]*$", {"properties": false}],
    "no-loop-func": 2,
    "complexity": [2, 10],
    "max-statements": [2, 70],
    "max-params": [2, 7],
    "no-self-compare": 2,
    "no-trailing-spaces": 1,
    "no-undefined": 2,
    "no-multi-str": 2,
    "no-unused-expressions": [2, {"allowShortCircuit": true, "allowTernary": true }],
    "no-labels": 2,
    "no-else-return": 1,
    "indent": [2, 4, {"SwitchCase": 1}],
    "no-invalid-this": 0,
    "no-use-before-define": 2,
    "no-param-reassign": 2,
    "no-new-wrappers": 2
  }
}